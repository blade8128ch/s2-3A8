<div class='container' mt-5>
  <div class='row'>
    <div class='row row-cols-sm-3'>
      <form action='/restaurants/{{restaurant._id}}?_method=PUT' method='POST'>
        <div><label>餐廳名稱</label>
          <input
            type='text'
            placeholder='name'
            name='name'
            value='{{restaurant.name}}'
            required
          /></div>
        <div><label>餐廳英文名稱</label>
          <input
            type='text'
            placeholder='name_en'
            name='name_en'
            value='{{restaurant.name_en}}'
            required
          /></div>
        <div><label>類別</label>
          <input
            type='text'
            placeholder='category'
            name='category'
            value='{{restaurant.category}}'
            required
          /></div>
        <div><label>圖片網址</label>
          <input
            type='url'
            placeholder='image'
            name='image'
            value='{{restaurant.image}}'
            required
          /></div>
        <div><label>地址</label>
          <input
            type='text'
            placeholder='location'
            name='location'
            value='{{restaurant.location}}'
            required
          /></div>
        <div><label>電話</label>
          <input
            type='tel'
            placeholder='phone'
            name='phone'
            value='{{restaurant.phone}}'
            required
          /></div>
        <div><label>地圖網址</label>
          <input
            type='url'
            placeholder='google_map'
            name='google_map'
            value='{{restaurant.google_map}}'
            required
          /></div>
        <div><label>評價</label>
          <input
            type='number'
            placeholder='rating'
            name='rating'
            value='{{restaurant.rating}}'
            required
          /></div>
        <div><label>描述</label>
          <textarea
            type='text'
            placeholder='description'
            name='description'
            required
          >{{restaurant.description}}</textarea></div>
        <button type='submit'>Edit</button>
        <a href='/'>back</a>
      </form>
    </div>
  </div>
</div>